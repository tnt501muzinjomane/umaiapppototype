<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:guest_id) %>:</strong></dt>
  <dd><%= @reservation.guest_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:restaurant_id) %>:</strong></dt>
  <dd><%= @reservation.restaurant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:table_id) %>:</strong></dt>
  <dd><%= @reservation.table_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shift_id) %>:</strong></dt>
  <dd><%= @reservation.shift_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reservation_date) %>:</strong></dt>
  <dd><%= @reservation.reservation_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reservation_time) %>:</strong></dt>
  <dd><%= @reservation.reservation_time %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reservations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_reservation_path(@reservation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              reservation_path(@reservation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
